<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>事妈驾到</title>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <style>
    *{
      padding:0;
      margin:0;
    }
      .container{
        padding-top: 20px;
        width: 90%;
        margin: 0 auto;
        -webkit-column-count:4;
        column-count:4;
        -webkit-column-gap: 1.5em;
        column-gap: 1.5em;
      }

      .box{
        -webkit-column-break-inside:avoid;
        column-break-inside:avoid;
        border: 1px solid #e4e4e6;
        margin-bottom: 30px;
        width: 300px;
      }

      .id{
        font-size: 14px;
        height: 60px;
        line-height: 30px;
        padding:0 20px;
        word-break: break-all;
      }

      .material-box{
        position: relative;
        width: 300px;
      }

      .main{
        display: flex;
        justify-content: center;
      }

      .main div{
        position: absolute;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        color: white;
        font-size: 12px;
        width: 268px;
        margin-left: 0px;
        height: 22px;
        line-height: 22px;
      }

      .main img{
        width: 268px;
        height: 160px;
      }

      .other{
        display: flex;
        flex-direction: row-reverse;
        justify-content: center;
        height: 100px;
        border-top:1px solid #e4e4e6;
      }

      .other div{
        width: 175px;
        height: 72px;
      }

      .other img{
        width: 78px;
        height: 78px;
      }

    </style>
  </head>
  <body>

    <div class="container">
      <% if (materials.length) { %>
          <% materials.forEach(function(material){ %>
            <div class="box">
              <div class="id"><%= material.media_id%></div>
              <% for(var i = 0; i < material.items.length; i++){
                  var m = material.items[i]; %>

                  <% if(i == 0) { %>
                    <div class="material-box main">
                      <img src="http://read.html5.qq.com/image?src=forum&q=5&r=0&imgflag=7&imageUrl=<%= m.thumb_url%>" alt="">
                      <div>
                        <%= m.title%>
                      </div>
                    </div>
                  <% } %>
                  <% if(i > 0) { %>
                      <div class="material-box other">
                        <img src="http://read.html5.qq.com/image?src=forum&q=5&r=0&imgflag=7&imageUrl=<%= m.thumb_url%>" alt="">
                        <div>
                          <%= m.title%>
                        </div>
                      </div>
                  <% } %>


              <% } %>
            </div>

          <% }) %>
      <% } %>
    </div>
  </body>
</html>
